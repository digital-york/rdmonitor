              getGoogleFileChunk(0, "<%= @dataset.id %>", 0, chunkSize-1); 
          //  }
          //}
        } else {
          if (showNoFilesAlert) {
            alertNoFiles();
          } else {
            finishUpload();
          }
        }
      };
      // by default, when user presses submit, handle google uploads 
      $('#submit_btn').on('click.googleFiles', function (ev) { uploadGoogleFiles(true) });
      //$('#submit_btn').on('click.noFiles', function(ev) { alertNoFiles() });
      //$('#submit_btn').on('click.googleFiles', function (ev) { uploadGoogleFiles() });
      $('.file_upload').fileupload({
          dataType: 'json',
          singleFileUploads: true,
          sequentialUploads: true,
          maxChunkSize: chunkSize,
          add: function (e, data) {            
              // pass the webkitRelativePath value (which contains the relative path to the file) to the form handler 
              // so it can build dir structure, and also file actual size
              data.formData = {"path": data.files[0].webkitRelativePath, "size": data.files[0].size};
              // remove default click handler for submit button (that alerted about no selected files)
              //$("#submit_btn").off('click', uploadGoogleFiles(true));
              //$("#submit_btn").off('click.noFiles');
              $("#submit_btn").off('click.googleFiles');
              // and add new click handler
              $("#submit_btn").on('click', function (ev) {
                  ev.preventDefault();
                  startUpload();
                  //$(this).attr("disabled", true);
                  //$(this).html("Please wait...");
                  data.submit();
              });
              localFileCount++;
          },
          progress: function (e, data) {
              var progress = parseInt(data.loaded / data.total * 100, 10);
              updateProgress(data.files[0].name, progress);
          },
          done: function (e, data) {
              //$("#submit_btn").off('click');
              $.each(data.result.files, function (index, file) {
                  $('#progressinfo').html(file.name + " uploaded!");
              });
              // now that we've uploaded all the files, handle google files (if there are any), which will also submit main form
              //uploadGoogleFiles();
              localFileUploadCount++;
              // if the number of 'done' files equals the number of selected files, then all uploads are done
              if (localFileUploadCount == localFileCount) {
                uploadGoogleFiles(false);
              }
          }
      });
  });
</script>

