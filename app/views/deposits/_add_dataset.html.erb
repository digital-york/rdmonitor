<h2 id="add_dataset">Add a Dataset</h2>
<table class="table-striped table-bordered table">
  <tbody>
  <tr>
    <th style="width:50%">Add/Update a Dataset from PURE</th>
    <th style="width:50%">Add a Dataset from elsewhere</th>
  </tr>
  <tr>
    <td>
      <%= form_for @deposit, url: deposits_path do |f| %>
          <div class="field">
            <%= f.label 'Enter the PURE ID or UUID:' %><br />
            <%= f.text_field :pure_uuid %>
          </div>
          <div class="actions">
            <%= f.submit 'Add dataset' %>
          </div>
      <% end %>

      <%= form_tag("/deposits", method: "get") do%>
          <div class="field">
            <%= hidden_field_tag(:refresh, 'true') %>
          </div>
          <div class="field">
            <%= label_tag 'Refresh items from the last x days:' %><br />
            <%= text_field_tag :refresh_from %>
          </div>
          <div class="actions">
            <%= submit_tag 'Refresh' %>
          </div>
      <% end %>
    </td>
    <td>
      <p><strong>Add a new dataset record from scratch</strong></p>
      <p>todo</p>
      <%= button_to 'Add dataset', new_deposit_path, :method => :get %>
    </td>
  </tr>
  </tbody>
</table>
</table>