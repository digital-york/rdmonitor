<%# include javascript and css libraries for jstree which will help user browse google drive files %>
<% content_for :head do %>
  <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" %> 
  <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.2/jstree.min.js" %> 
<% end %>

<% if @dataset.nil? %>

    <h1>Thanks!</h1>

    <p>Your deposit was successful.</p>
    <p>If you submit another datast to PURE, we'll send you a new deposit link.</p>

<% else %>

    <%= @notice %>

    <%= render 'datasets/dataset_metadata' %>

    <% if @dataset.aips.size > 0 %>
        <p>
          <strong><%= @dataset.aips.size %></strong> data deposit
          <% if @dataset.aips.size > 1 %>
              <%= s %> have
          <% else %>
              has
          <% end %>
          been added for this PURE dataset.
        </p>
        <% if current_user %>
            <p>
              If you need to add another AIP to this dataset.
            </p>
            <%= render 'formaip' %>
        <% else %>
            <p>
              If you need to add, remove or update the data, please contact the RDM team.
            </p>
        <% end %>
    <% else %>
        <h1>Data Deposit</h1>
        <%= render 'formaip' %>
    <% end %>

<% end %>
