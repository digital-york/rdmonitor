<p id="notice"><%= notice %></p>

<p>Here refresh list, and quantity option AND/OR add using pure_uuid option</p>
<%= form_for @deposit, url: deposits_path do |f| %>
    <div class="field">
      <%= f.label :pure_uuid %><br>
      <%= f.text_field :pure_uuid%>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<h1>Listing deposits</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @deposits.each do |upload| %>
      <tr>
        <td><%= upload %></td>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Edit', edit_deposit_path(upload) %></td>
        <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>

</table>

