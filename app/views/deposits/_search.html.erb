<div class="search_box">
<%= form_tag("/deposits", method: "get") do %>
    <div class="field">
      <%= hidden_field_tag(:search, 'true') %>
    </div>
    <div class="field q_div">
      <%= label_tag(:q, "Search For ") %>
      <%= text_field_tag(:q, params[:q]) %>
    </div>
    <div class="field">
      <table>
        <tr>
          <td>

            <%= check_box_tag(:new, "new") %>
            <%= label_tag(:new, "New - Awaiting Action" ) %><br/>

            <%= check_box_tag('status[]',"awaiting-info") %>
            <%= label_tag('status[]', "Researcher Contacted - Awaiting Info" ) %><br/>
           
            <%= check_box_tag('status[]',"awaiting-data") %>
            <%= label_tag('status[]', "Researcher Contacted - Awaiting Data " ) %><br/>
           
            <%= check_box_tag(:doi,"doi") %>
            <%= label_tag('doi', "DOI Created") %><br/>

            <%= check_box_tag(:doi,"nodoi") %>
            <%= label_tag(:doi, "DOI Not Yet Created " ) %><br/>
            <%= check_box_tag('status[]',"phd-data") %>
            <%= label_tag('status[]', "PhD Student Deposit" ) %><br/>
            </td>
            <td>
           
            <%= check_box_tag('status[]',"nodata-external") %>
            <%= label_tag('status[]', "Data Externally Held " ) %><br/>

           
            <%= check_box_tag('status[]',"nodata-dept") %>
            <%= label_tag('status[]', "Data Held By Dept " ) %><br/>

              <%= check_box_tag('aip_status[]', "inprogress") %>
              <%= label_tag('aip_status[]', "Upload in Progress" ) %><br/>

              <%= check_box_tag('aip_status[]', "uploaded") %>
              <%= label_tag('aip_status[]', "Data Uploaded" ) %><br/>

              <%= check_box_tag('aip_status[]', "problem") %>
              <%= label_tag('aip_status[]', "Upload Problem" ) %><br/>

              <%= check_box_tag('aip_status[]', "noaip") %>
              <%= label_tag('aip_status[]', "Data Not Uploaded" ) %><br/>

            </td>
          <td>
            <%= check_box_tag('status[]', "held-pub-meta") %>
            <%= label_tag('status[]', "Metadata Held for Publicationâ€¨" ) %><br/>

            <%= check_box_tag('status[]', "held-pub-data") %>
            <%= label_tag('status[]', "Data Held for Publicationâ€¨" ) %><br/>

            <%= check_box_tag('dip_status[]', "UPLOADED") %>
            <%= label_tag('dip_status[]', "Data Available" ) %><br/>

            <%= check_box_tag('dip_status[]', "waiting") %>
            <%= label_tag('dip_status[]', "Wating for Approval" ) %><br/>

            <%= check_box_tag('dip_status[]', "APPROVE") %>
            <%= label_tag('dip_status[]', "Request Approved, Data In Progress" ) %><br/>

            <%= check_box_tag('dip_status[]', "nodip") %>
            <%= label_tag('dip_status[]', "Data Not Available" ) %><br/>
          </td>
        </tr>
      </table>
      </div>
    <% unless params[:search].nil? %>
    <p>Current search params:

      <%= raw params[:q] %>
      <%= raw params[:new] %>
      <%= raw params[:doi] %>
      <%= raw params[:status] %>
      <%= raw params[:aip_status] %>
      <%= raw params[:dip_status] %>

    </p>
      <% end %>
      <div class="actions">
        <%= submit_tag 'Search' %>
        &nbsp;&nbsp;<%= link_to 'Clear search', deposits_path %>
      </div>
<% end %>
</div>